#include <iostream>
#include <stdio.h>
#include <stdlib.h>
#include <math.h>
#include <iomanip>
#include <locale>
#include <string>
using namespace std;
#define _CRT_SECURE_NO_DEPRECATE
int main() {
	setlocale(LC_ALL, "ru");
	cout << "Введите текст: ";
	string word;
	getline(cin, word);
	for (int i = 0; i < word.rfind("quit"); i++) {
		if (word[i] == ' ')
			word[i] = '!';
	}
	cout << word << endl;
}
